{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "package": {
    "productName": "מערכת ניהול פרויקטים Pro",
    "version": "1.0.0"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "open": true,
      "save": true,
      "message": true,
      "ask": true,
      "confirm": true
    },
    "fs": {
      "all": true,
      "scope": ["**"]
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Copyright © 2025 מערכת ניהול פרויקטים Pro",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "identifier": "com.mrmshor.projectmanager.pro",
      "longDescription": "מערכת ניהול פרויקטים מתקדמת עם תמיכה מלאה בעברית ושמירה מקומית",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "מערכת ניהול פרויקטים Pro",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "מערכת ניהול פרויקטים Pro",
        "width": 1200,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "url": "../dist/index.html",
        "fileDropEnabled": false,
        "acceptFirstMouse": false,
        "transparent": false,
        "alwaysOnTop": false,
        "decorations": true,
        "maximized": false,
        "visible": true,
        "skipTaskbar": false
      }
    ]
  }
}