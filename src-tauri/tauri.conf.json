{
  "$schema": "https://schema.tauri.app/config/2.0.json",
  "productName": "מערכת ניהול פרויקטים Pro",
  "version": "1.0.0",
  "identifier": "com.mrmshor.projectmanager.pro",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "מערכת ניהול פרויקטים Pro",
        "width": 1200,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "opener": {
      "enable": true
    },
    "dialog": {
      "open": true,
      "save": true,
      "message": true,
      "ask": true,
      "confirm": true
    },
    "fs": {
      "all": true,
      "scope": ["**", "$HOME/**", "$DOCUMENTS/**", "$DESKTOP/**"]
    }
  }
}