{
  "$schema": "https://schema.tauri.app/config/2.0.json",
  "productName": "מערכת ניהול פרויקטים Pro",
  "version": "1.0.0",
  "identifier": "com.mrmshor.projectmanager.pro",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "מערכת ניהול פרויקטים Pro",
        "width": 1200,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "acceptFirstMouse": false,
        "transparent": false,
        "alwaysOnTop": false,
        "decorations": true,
        "maximized": false,
        "visible": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Copyright © 2025 מערכת ניהול פרויקטים Pro",
    "externalBin": [],
    "longDescription": "מערכת ניהול פרויקטים מתקדמת עם תמיכה מלאה בעברית ושמירה מקומית",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "מערכת ניהול פרויקטים Pro",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "open",
          "sidecar": false,
          "args": [
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "dialog": {
      "open": true,
      "save": true,
      "message": true,
      "ask": true,
      "confirm": true
    },
    "fs": {
      "all": true,
      "scope": ["**", "$HOME/**", "$DOCUMENTS/**", "$DESKTOP/**"]
    }
  }
}