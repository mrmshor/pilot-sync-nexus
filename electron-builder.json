{
  "appId": "com.mrmshor.projectmanager.pro",
  "productName": "מערכת ניהול פרויקטים Pro",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "public/electron.js",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "dmg": {
    "title": "מערכת ניהול פרויקטים Pro",
    "icon": "public/favicon.ico",
    "background": null,
    "window": {
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "publish": null
}